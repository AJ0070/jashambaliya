---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "./Layout.astro";
import { TbBrandGithub, TbExternalLink } from "react-icons/tb";

export interface Project {
  title: string;
  description: string;
  techStack: string[];
  liveLink?: string;
  githubLink?: string;
}

export interface Props {
  frontmatter: {
    title: string;
    projects: Project[];
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header activeNav="projects" />
  <Breadcrumbs />

  <main id="main-content" class="mx-auto w-full max-w-4xl px-4 sm:px-6 pb-12">
    <!-- Header -->
    <div class="mb-8 pb-4 border-b border-skin-line/20">
      <h1 class="text-2xl font-semibold sm:text-3xl text-skin-base mb-2">
        {frontmatter.title}
      </h1>
      <p class="text-sm text-skin-base/70">
        {frontmatter.projects.length}
        {frontmatter.projects.length === 1 ? "project" : "projects"}
      </p>
    </div>

    <!-- Projects List -->
    <div class="space-y-4">
      {
        frontmatter.projects.map((project) => (
          <article class="group flex flex-col sm:flex-row gap-4 p-4 rounded-lg border border-skin-line/20 bg-skin-card/5 transition-all hover:border-skin-line/40 hover:bg-skin-card/10">
            {/* Content */}
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-3 mb-2">
                <h2 class="text-base font-serif font-bold text-skin-base group-hover:text-skin-accent transition-colors leading-tight">
                  {project.title}
                </h2>
                <div class="flex gap-2 shrink-0">
                  {project.githubLink && (
                    <a
                      href={project.githubLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-skin-base/60 hover:text-skin-base transition-colors"
                      title="Source"
                    >
                      <TbBrandGithub className="w-4 h-4" />
                    </a>
                  )}
                  {project.liveLink && (
                    <a
                      href={project.liveLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-skin-base/60 hover:text-skin-base transition-colors"
                      title="Live"
                    >
                      <TbExternalLink className="w-4 h-4" />
                    </a>
                  )}
                </div>
              </div>

              <p class="text-xs text-skin-base/70 leading-relaxed mb-3 line-clamp-2">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-1.5">
                {project.techStack.map((tech) => (
                  <span class="inline-block px-2 py-0.5 text-[9px] font-mono uppercase tracking-wider bg-skin-fill/50 text-skin-base/70 rounded">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </main>
  <Footer />
</Layout>
